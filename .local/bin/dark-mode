#!/bin/bash
gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
sed -i "s|import = \[\"~/.config/alacritty/themes/everforest-.*\.toml\"\]|import = [\"~/.config/alacritty/themes/everforest-dark-medium.toml\"]|" ~/.config/alacritty/alacritty.toml
sed -i 's|vim\.cmd("set background=light")|vim.cmd("set background=dark")|' ~/.config/nvim/lua/options.lua
sed -i \
  -e "s|-nb '#fdf6e3'|-nb '#2d353b'|" \
  -e "s|-nf '#5c6a72'|-nf '#d3c6aa'|" \
  -e "s|-sb '#3a94c5'|-sb '#7fbbb3'|" \
  -e "s|-sf '#fdf6e3'|-sf '#2d353b'|" \
  ~/.config/i3/config
i3-msg restart
